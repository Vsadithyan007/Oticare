<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".s_up"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_log"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Sign Up !"
            android:textColor="#E84410"
            android:textSize="35sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="24dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_account_box_24"
            android:drawablePadding="20dp"
            android:drawableTint="#071D95"
            android:hint="First Name"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="#071D95"
            android:textColorHint="#071D95"
            android:autofillHints="" />

        <EditText
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fname"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="24dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_account_box_24"
            android:drawablePadding="20dp"
            android:drawableTint="#071D95"
            android:hint="Last Name"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="#071D95"
            android:textColorHint="#071D95" />

        <EditText
            android:id="@+id/semail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lname"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="24dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_login_24"
            android:drawablePadding="20dp"
            android:drawableTint="#071D95"
            android:hint="Email"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="#071D95"
            android:textColorHint="#071D95" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/semail"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="24dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_login_24"
            android:drawablePadding="20dp"
            android:drawableTint="#071D95"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="#071D95"
            android:textColorHint="#071D95" />

        <Button
            android:id="@+id/sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="#071D95"
            android:text="Sign Up"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="30dp"
            android:text="Already Have an Account ?, Login!"
            android:textColor="#2E7D32"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>
